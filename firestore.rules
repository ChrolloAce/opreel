rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is a team member
    function isTeamMember(userId) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(userId)) &&
             request.auth.uid in get(/databases/$(database)/documents/users/$(userId)).data.teamMembers;
    }
    
    // Helper function to check if user has access (owner or team member)
    function hasAccess(userId) {
      return isOwner(userId) || isTeamMember(userId);
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles (for team member lookup)
      allow read: if isAuthenticated();
      // Only owners can write their own profile
      allow write: if isOwner(userId);
      // Allow creation of new user profiles
      allow create: if isAuthenticated();
      // Allow updating teamMembers field specifically
      allow update: if isOwner(userId) || 
                       (isAuthenticated() && 
                        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['teamMembers']));
      
      // Content items - owner and team members can access
      match /content/{contentId} {
        allow read, write, delete, create: if hasAccess(userId);
      }
      
      // AI Settings - owner and team members can access
      match /aiSettings/{settingId} {
        allow read, write, create: if hasAccess(userId);
      }
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

