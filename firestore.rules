rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - each user can only read/write their own data
    match /users/{userId} {
      allow read, write, create: if isOwner(userId);
      
      // Content items - users can only access their own content
      match /content/{contentId} {
        allow read, write, delete, create: if isOwner(userId);
      }
      
      // AI Settings - users can only access their own AI settings
      match /aiSettings/{settingId} {
        allow read, write, create: if isOwner(userId);
      }
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

